extends ../layout

block content
	h1=title
	div.background
	div.produit-edit.popup.draggable
	div.delete.popup.draggable
	div.one-column
		- if (docs != null)
			table(broder="1").center-block
				tr
					th Date d'arrivée
					th Date de départ
					th Salle
					th Image salle
					th Promotion
					th Réduction
					th Prix
					th Etat
					th Supprimer
					- each produit in docs
						tr.model-edit-link(data-id="#{produit._id}", data-model="produit")
							td #{produit.arrive.toDateString()} #{produit.arrive.toLocaleTimeString()}
							td #{produit.depart.toDateString()} #{produit.depart.toLocaleTimeString()}
							- if (produit.salle_id != null)
								td #{produit.salle_id.title}
								td 
									img(src="images/vignettes/#{produit.salle_id.image}", height="50", width="50")
							- else
								td
								td
							- if (produit.promotion_id != null) 
								td #{produit.promotion_id.code}
								td #{produit.promotion_id.reduction}
							- else
								td
								td
							td #{produit.prix}
							td #{produit.etat}
							td.model-delete-link
								input( type="button", value="X")
		-else
			p.error-message(colspan="3") Pas de produit à afficher
	
